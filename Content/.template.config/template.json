{
    "$schema": "http://json.schemastore.org/template",
    "identity": "Elmish.Component",
    "author": "nojaf",
    "classifications": [ "Fable","Elmish" ],
    "name": "Elmish Component",
    "shortName": "elmish-component",
    "preferNameDirectory": true,
    "sourceName": "ElmishComponent",
    "symbols": {
        "namespace":{
            "type": "parameter",
            "defaultValue": "",
            "replaces": "ProjectNamespace",
            "description": "Namespace of the project"
        },
        "property":{
            "type": "parameter",
            "defaultValue": "Property",
            "replaces": "Property",
            "description": "Name of the property of the sub component Model in the main Component."
        }
    },
    "sources":[
        {"exclude": [
            ".template.config/**/*",
            "**/*.ps1",
            "**/.gitignore"
        ]}
    ],
    "description": "Creates a new Elmish subcomponent. Generates a Types, State & View file",
    "tags": {
        "language": "F#",
        "type":"item"
    }
}